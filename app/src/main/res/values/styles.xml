<resources>

    <!-- APP 基本主题 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Light 主题 -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Light" parent="@style/AppTheme" />

    <style name="AppTheme.Light.Blue" parent="@style/AppTheme.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="android:windowAnimationStyle">@style/fadeSwitch</item>-->
    </style>

    <style name="AppTheme.NoActionBar.Blue" parent="@style/AppTheme.Light.Blue">
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">#000</item>
        <!--<item name="android:windowAnimationStyle">@style/fadeSwitch</item>-->
    </style>

    <!-- Activity 渐变切换动画 -->
